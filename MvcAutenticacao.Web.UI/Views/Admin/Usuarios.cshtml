@model IEnumerable<MvcAutenticacao.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<h1>Usuarios Cadastrados</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Cargo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(x => x.Id != User.FindFirst("Id")!.Value && x.UserRole.Nome != "Admin"))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserRole.Nome)
                </td>
                <td>
                    @Html.ActionLink("Detalhes", "Detalhes", new { id=item.Id }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Deletar Usuario", "DeletarUsuario", new { id=item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
